{
  "manifest_version": 3,
  "name": "JIRA Link Generator",
  "version": "1.0",
  "description": "Finds ticket patterns on the current page and generates URLs.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
